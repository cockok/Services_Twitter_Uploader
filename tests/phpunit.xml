<phpunit
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    processIsolation="true"
    stopOnFailure="true"
    syntaxCheck="false"
    verbose="true"
    strict="true">
    <php>
        <includePath>../src</includePath>
    </php>
    <testsuites>
        <testsuite name="OAuthUploader Test Suite">
            <file>Services/OAuthUploader/ImglyTest.php</file>
            <file>Services/OAuthUploader/PlixiTest.php</file>
            <file>Services/OAuthUploader/TwippleTest.php</file>
            <file>Services/OAuthUploader/TwippleTest.php</file>
            <file>Services/OAuthUploader/TwitgooTest.php</file>
            <file>Services/OAuthUploader/TwitpicTest.php</file>
            <file>Services/OAuthUploader/YfrogTest.php</file>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">../Services</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="junit"           target="./reports/unitreport.xml"/>
        <log type="coverage-clover" target="./reports/coverage.xml"/>
        <log type="coverage-html"   target="./reports/coverage/" charset="UTF-8" yui="true" highlight="true"/>
    </logging>
</phpunit>
